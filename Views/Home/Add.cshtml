
@model Todolist.Models.AddTodoViewModel

<h1>Add Todo</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="4" cols="50"></textarea>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
