@{
}
@{
    ViewData["Title"] = "Bin";
}
@model List<Todolist.Models.Entities.Tododataset>
<h1>Recycle Bin</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>AddedOn</th>
            <th>DeletedOn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Data in Model)
        {
            <tr>
                <td>@Data.Title</td>
                <td>@Data.Description</td>
                <td>@Data.AddedOn</td>
                <td>@Data.DeletedOn</td>
                <td>
                    <form asp-controller="Home" asp-action="Restore" asp-route-id="@Data.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Restore</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="Home" asp-action="PermanentDelete" asp-route-id="@Data.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

